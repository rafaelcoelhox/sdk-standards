{
  "name": "@abacatepay/sdk",
  "version": "1.0.0",
  "description": "SDK oficial da AbacatePay para Node.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "format": "prettier --write 'src/**/*.{js,ts}'",
    "prepare": "husky install",
    "define:change": "changeset",
    "release": "npm run build && changeset publish"
  },
  "keywords": [
    "abacatepay",
    "pagamentos",
    "sdk",
    "api"
  ],
  "author": "AbacatePay <dev@abacatepay.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AbacatePay/sdk-nodejs.git"
  },
  "bugs": {
    "url": "https://github.com/AbacatePay/sdk-nodejs/issues"
  },
  "homepage": "https://github.com/AbacatePay/sdk-nodejs#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.0",
    "nock": "^13.3.0",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "axios": "^1.3.5"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
} 